<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/gradientdown</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
   <style name="EditTextStyle">
       <item name="android:colorControlActivated">@color/gradientdown</item>
       <item name="android:colorActivatedHighlight">@color/gradientdown</item>
       <item name="android:textColorHint">@color/gradientdown</item>
       <item name="android:textColor">@color/gradientdown</item>
   </style>

    <style name="imagview">
        <item name="android:foreground">@drawable/splashinverse</item>
        <item name="android:background">@drawable/add</item>
    </style>
    <style name="button" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/gradientbutton</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:textSize">25dp</item>
    </style>
    <style name="loginTextstyle">
        <item name="android:colorControlActivated">#ffffff</item>
        <item name="android:colorActivatedHighlight">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textCursorDrawable">@drawable/cursorcolor</item>
        <item name="android:background">@drawable/textbordershapelogin</item>
    </style>
</resources>
