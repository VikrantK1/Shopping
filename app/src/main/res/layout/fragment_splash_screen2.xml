<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashbackground"
    android:clickable="true"
    tools:context=".fragment.SplashScreen2">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="170dp"
        android:src="@drawable/splashimg"
        android:id="@+id/splashimg"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Shopping List"
        android:textSize="40dp"
        android:id="@+id/SplashText"
        android:textStyle="bold"
        android:textColor="@color/gradientup"
        android:layout_below="@+id/splashimg"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>