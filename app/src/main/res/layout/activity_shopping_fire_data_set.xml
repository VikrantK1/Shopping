<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".shopping_fire_data_set">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".shopping_fire_data_set">
    <android.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:background="#AD0E3291"
        android:layout_height="50dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_margin="15dp"
        android:background="@drawable/editround"
        android:textColor="#2196F3"
        android:hint="Product Name"
        android:paddingStart="10dp"
        android:theme="@style/EditTextStyle"
        android:id="@+id/nameOfProduct"
        android:textColorHint="#649DCA"
        android:textSize="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_margin="15dp"
        android:paddingStart="10dp"
        android:background="@drawable/editround"
        android:id="@+id/distanceFromCounter"
        android:textColor="#2196F3"
        android:theme="@style/EditTextStyle"
        android:hint="Distance from counter"
        android:textColorHint="#649DCA"
        android:inputType="numberDecimal"
        android:textSize="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_margin="15dp"
        android:paddingTop="5dp"
        android:background="@drawable/editround"
        android:id="@+id/descriptionOfProduct"
        android:paddingStart="10dp"
        android:gravity="top|left"
        android:theme="@style/EditTextStyle"
        android:hint="Description and location"
        android:textColor="#2196F3"
        android:inputType="textMultiLine"
        android:textColorHint="#649DCA"
        android:lines="6"
        android:minLines="3"
        android:textSize="30dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/submitS"
    android:layout_marginTop="20dp"
    android:layout_gravity="center_horizontal"
    android:text="Submit"
    />
</LinearLayout>
    </ScrollView>