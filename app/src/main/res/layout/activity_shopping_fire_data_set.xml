<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activity.shopping_fire_data_set">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.shopping_fire_data_set">

        <android.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/splashinverse" />

        <EditText
            android:id="@+id/nameOfProduct"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:background="@drawable/editround"
            android:hint="Product Name"
            android:paddingStart="10dp"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/distanceFromCounter"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/editround"
                android:hint="Distance"
                android:inputType="numberDecimal"
                android:paddingStart="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/floor"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/editround"
                android:hint="Floor No"
                android:inputType="numberDecimal"
                android:paddingStart="10dp"
                android:textSize="20dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/descriptionOfProduct"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:layout_margin="15dp"
            android:background="@drawable/editround"
            android:gravity="top|left"
            android:hint="Description and location"
            android:inputType="textMultiLine"
            android:lines="6"
            android:minLines="3"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/submitS"
            style="@style/button"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Submit"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>