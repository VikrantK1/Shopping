<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/finalHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Dummy"
            android:textColor="@color/gradientdown"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/floorNoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/floorNo"
            android:text="Floor No:"
            android:textColor="@color/gradientdown"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/floorNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_margin="5dp"
            android:text="No"
            android:textColor="@color/gradientdown"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/finalDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/finalHead"
            android:layout_marginStart="10dp"
            android:text="Dummy"
            android:textSize="20dp" />
    </RelativeLayout>
</LinearLayout>