<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activity.DashBoardAdmin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@drawable/splashinverse">

        <ProgressBar
            android:id="@+id/progressProfile"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:elevation="20dp"
            android:indeterminateDrawable="@drawable/progessgradient"
            android:indeterminateDuration="@android:integer/config_shortAnimTime"
            android:visibility="invisible" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/userimg"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:src="@drawable/addperson" />

        <TextView
            android:id="@+id/Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@id/userimg"
            android:textColor="#ffffff"
            android:textSize="25dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/createlist1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="18dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="7dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/createlist"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="-20dp"
                            android:src="@drawable/createlist" />

                        <TextView
                            android:id="@+id/createlistT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/createlist"
                            android:layout_centerHorizontal="true"
                            android:text="Create List"
                            android:textColor="@color/gradientdown"
                            android:textSize="20dp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/havinglist"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="7dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/havinglistI"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="-20dp"
                            android:src="@drawable/listhaving" />

                        <TextView
                            android:id="@+id/havinglistT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/havinglistI"
                            android:layout_centerHorizontal="true"
                            android:text="Having List"
                            android:textColor="@color/gradientdown"
                            android:textSize="20dp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/savedlist"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="18dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="7dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/count"
                            android:layout_width="40dp"
                            android:layout_height="25dp"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="10dp"
                            android:background="@drawable/shape"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/gradientdown"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/savedlistI"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="-20dp"
                            android:src="@drawable/saveall" />

                        <TextView
                            android:id="@+id/savedlistT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/savedlistI"
                            android:layout_centerHorizontal="true"
                            android:text="Saved List"
                            android:textColor="@color/gradientdown"
                            android:textSize="20dp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/manage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="7dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/manageI"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="-20dp"
                            android:src="@drawable/admin" />

                        <TextView
                            android:id="@+id/manageT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/manageI"
                            android:layout_centerHorizontal="true"
                            android:text="Manage"
                            android:textColor="@color/gradientdown"
                            android:textSize="20dp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/logoutC"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="7dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/logoutI"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="-20dp"
                            android:src="@drawable/logout2" />

                        <TextView
                            android:id="@+id/logoutT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/logoutI"
                            android:layout_centerHorizontal="true"
                            android:text="Logout"
                            android:textColor="@color/gradientdown"
                            android:textSize="20dp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>